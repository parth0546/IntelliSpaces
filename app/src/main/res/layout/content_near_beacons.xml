<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".IntelliSpaces"
    tools:showIn="@layout/activity_near_beacons">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Immediate"
        android:id="@+id/immediate"
        android:layout_marginTop="63dp"
        android:layout_below="@+id/bs"
        android:layout_alignLeft="@+id/near"
        android:layout_alignStart="@+id/near" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Near"
        android:id="@+id/near"
        android:layout_marginTop="74dp"
        android:layout_below="@+id/immediate"
        android:layout_alignLeft="@+id/far"
        android:layout_alignStart="@+id/far" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FAR"
        android:id="@+id/far"
        android:layout_marginTop="86dp"
        android:layout_below="@+id/near"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="beacon from server"
        android:id="@+id/bs"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
